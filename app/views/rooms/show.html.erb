<%= @room.name %><br>
<%= link_to 'home', user_path(@user) %><br>
<%= link_to 'all rooms', rooms_path %><br>

<%= form_for ([@room, @message]) do |f| %>
    <%= f.label :content, 'Type here' %><br>
    <%= f.text_area :content %><br>
    <%= f.submit 'send' %><br>
<% end %><br>

<% @room.messages.each do |m| %>
    <%= m.user.name %><br>
    <%= m.content %><hr><br>    
<% end %>

