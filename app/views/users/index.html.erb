<h1><%= @user.name %></h1>

<%= link_to "Channels", '#', :onclick => 'showChannelForm(event);' %><br>
<%# <a href="#" onclick="showChannelForm" id="channelForm">Add a channel</a> %>

<div id="channelForm"></div>

<ul id="channels">
  <% @user.rooms.each do |room| %>
    <% if !room.name.include?(@user.name) %>
      <%= link_to room.name, room_path(room) %><hr><br>
    <% end %>
  <% end %>
</ul><hr>

<%= link_to "Direct Message", search_path %><hr><br>

<ul id="contacts">
  <% @user.rooms.each do |room| %>
    <% if room.name.include?(@user.name) %>
    <% num = @user.name.length + 1 %>
      <%= link_to room.name.slice(num..-1), room_path(room) %><hr><br>
    <% end %>
  <% end %>
</ul>
